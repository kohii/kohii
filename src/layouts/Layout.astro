---
import Footer from "../components/Footer.astro";
import "@fontsource/fira-code";

type Props = {
	title?: string;
	description?: string;
};

const props: Props = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL("/images/og.png", Astro.url);
const title = props.title ? `${props.title} | kohii` : "kohii";
const description = props.description || "kohii's portfolio";
---

<!doctype html>
<html>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="canonical" content={canonicalURL} />
		<meta name="author" content="kohii" />
		<meta name="robots" content="index, follow" />
		<meta name="theme-color" content="rgb(24, 24, 27)" />

		<meta name="twitter:card" content="summary" />
		<meta property="og:image" content={socialImageURL} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:site_name" content="kohii" />

		<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="manifest" href="/site.webmanifest" />
	</head>
	<body>
		<div class="min-h-screen bg-zinc-900 text-zinc-100">
			<slot />
	    <Footer />
		</div>
	</body>
</html>

<style>
	html,
	body {
		font-family: "Fira Code", monospace;
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
